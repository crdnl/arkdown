if user
	ul#account-dd.dropdown-content.black
		li
			a(href="/user/settings").red-text.text-darken-2 Settings
		li
			a(href="/user/").red-text.text-darken-2 My Profile
		li
			a(href="/user/"+user.name+"/content").red-text.text-darken-2 My Content
		li
			a(href="/user/"+user.name+"/liked").red-text.text-darken-2 My Liked Content
		li
			a(href="/user/logout").red-text.text-darken-2 Logout

nav.red.darken-2
	div.nav-wrapper.container
		a.brand-logo(href="/")
			span arkdown
		ul.nav-mobile.right
			li(class=(title == "Top") ? "active" : undefined)
				a(href="/content/top") Top
			li(class=(title == "New") ? "active" : undefined)
				a(href="/content/new") New
			li.red.darken-2
				a.red-text.text-darken-2 &nbsp;
			
			if !user
				li(class=(title == "Register") ? "active" : undefined).grey.darken-4
					a(href="/user/signup") Register
				li.black
					a(href="/user/login") Login
			else
				li(data-tooltip="Add Content" data-delay="0").black.tooltipped
					a(href="/content/add")
						i.material-icons add
				li.black
					a(data-activates="account-dd" data-belowOrigin="true" data-constrainWidth="false").dropdown-button= user.name
						i.material-icons.right arrow_drop_down

				